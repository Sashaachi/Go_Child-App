<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark"
    >
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="475dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"

        android:padding="5dp">

        <TextView
            android:id="@+id/txtclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@drawable/cerclebackgroundgreen"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"

            android:gravity="center"
            android:text="You can join in protecting our
children by:"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/reportCaseNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/name"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

            <EditText
                android:id="@+id/reportCaseIdNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:drawableLeft="@drawable/ic_assignment_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/id_number"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

            <EditText
                android:id="@+id/reportCasePhoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/phone"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

            <EditText
                android:id="@+id/reportCaseLocationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/field"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/location"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/field"
                android:gravity="center"
                android:orientation="vertical">


                <CheckBox
                    android:buttonTint="@color/white"
                    android:textColor="@color/white"
                    android:id="@+id/donateFunds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Donating funds" />
                <CheckBox
                    android:buttonTint="@color/white"

                    android:textColor="@color/white"
                    android:id="@+id/sponsoringFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sponsoring fee" />
                <CheckBox
                    android:buttonTint="@color/white"

                    android:textColor="@color/white"
                    android:id="@+id/advocacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offer advocacy" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnfollow"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/continueget"
            android:text="Join Us"
            android:textColor="@color/white" />
        <TextView
            android:gravity="center|bottom"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Thank You!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>
